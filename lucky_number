#include<stdio.h>
int main()
{
    
    int n,temp,a,Count=0;
    scanf("%d",&n);
    temp = n;
    while(temp!=0)
    {
        a = temp%10;
        if(a==4 ||a==7)
        {
            Count++;
        }

        temp = temp/10;

    }
   if(Count==4 ||Count == 7)
   {
       printf("Yes");
   }
   else
   {
       printf("No");
   }

}
